<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="15dp"
            android:text="@string/nombre"
            android:textColor="#080808"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/titulo_D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="10dp"
            android:paddingLeft="27dp"
            android:paddingRight="27dp"
            android:text="Veracruz"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/titulo_D"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_etiqueta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView4"
            android:layout_marginStart="27dp"
            android:layout_marginTop="15dp"
            android:text="Siglas"
            android:textColor="#080808"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sigla_D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_etiqueta"
            android:layout_marginTop="10dp"
            android:paddingLeft="27dp"
            android:paddingRight="27dp"
            android:text="Calle Viveros #32"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sigla_D"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView9"
            android:layout_marginStart="27dp"
            android:layout_marginTop="15dp"
            android:text="DirecciÃ³n"
            android:textColor="#080808"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/direccion_D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="10dp"
            android:paddingLeft="27dp"
            android:paddingRight="27dp"
            android:text="Plaza Pulpo Local 20"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/direccion_D"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary" />

        <Button
            android:id="@+id/idbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="300dp"
            android:background="@android:color/holo_blue_light"
            android:text="Proyecto"
            android:textColor="@android:color/black" />

    </RelativeLayout>


</ScrollView>